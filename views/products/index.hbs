{{#extends 'base'}}

{{#block "content"}}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.cost}}
            </td>
            <td>
                {{this.category.name}}
            </td>
            <td>
                <a href="/products/{{this.id}}/update" 
                    class="btn btn-primary btn-sm">Edit</a>
                <a href="/products/{{this.id}}/delete"
                    class="btn btn-danger btn-sm">Delete</a>
            </td>
        {{/each}}
        </tr>
    </tbody>
</table>
{{/block}}

{{/extends}}